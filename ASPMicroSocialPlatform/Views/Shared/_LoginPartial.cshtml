@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser currentUser = null;
    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2"
               href="#"
               role="button"
               data-bs-toggle="dropdown"
               aria-expanded="false">
                <img src="@(!string.IsNullOrEmpty(currentUser.ProfilePicture) ? currentUser.ProfilePicture : "/images/MissingNo.png")"
                     class="rounded-circle"
                     style="width: 32px; height: 32px; object-fit: cover;"
                     alt="Profile Picture">
                <span class="text-light d-none d-sm-inline">@currentUser?.FirstName</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                <li>
                    <a class="dropdown-item d-flex align-items-center gap-2"
                       asp-area="Identity"
                       asp-controller="Users"
                       asp-action="Show"
                       asp-route-id="@currentUser.Id">
                        <i class="bi bi-person"></i>Profile
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline"
                          asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger d-flex align-items-center gap-2">
                            <i class="bi bi-box-arrow-right"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light d-flex align-items-center gap-2"
               asp-area="Identity"
               asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i>
                <span class="d-none d-sm-inline">Register</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light d-flex align-items-center gap-2"
               asp-area="Identity"
               asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i>
                <span class="d-none d-sm-inline">Login</span>
            </a>
        </li>
    }
</ul>

<style>
    .dropdown-item {
        padding: 0.5rem 1rem;
        transition: all 0.2s ease;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    .dropdown-menu {
        margin-top: 0.5rem;
        border-radius: 0.5rem;
    }
</style>