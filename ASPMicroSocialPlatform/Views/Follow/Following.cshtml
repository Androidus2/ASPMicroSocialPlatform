@model IEnumerable<ASPMicroSocialPlatform.Models.ApplicationUser>

@{
    ViewBag.Title = "Following";
    ViewBag.ShowUnfollowButton = (bool)ViewBag.isSelf;
}


@if (!Model.Any())
{
    <h2>You are not following anyone yet.</h2>
}
else
{
    <div class="container py-5">
        <h2 class="mb-4">
            <i class="fas fa-users me-2"></i>Follows
        </h2>

        <div class="row g-4">
            @foreach (var user in Model)
            {
                <partial name="_UserCard" model="user" />
            }
        </div>
    </div>
}