@model IEnumerable<ASPMicroSocialPlatform.Models.Post>

<div class="container py-4">
    <h2 class="mb-4 fw-bold"><i class="bi bi-file-text me-2"></i>Home</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Your feed is empty. Follow more users to see their posts here.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                await Html.RenderPartialAsync("_PostPartial", post);
            }
        </div>
    }
</div>

<style>
    .cursor-pointer {
        cursor: pointer;
    }

    .hover-shadow {
        transition: all 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
            cursor: hand;
        }

    .user-name:hover {
        color: #0d6efd !important;
    }
</style>
