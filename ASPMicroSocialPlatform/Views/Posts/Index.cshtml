@model IEnumerable<ASPMicroSocialPlatform.Models.Post>

<div class="container py-4">
    <h2 class="mb-4 fw-bold">Posts</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                    <!-- Post Header -->
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex align-items-center">
                            <img src="@(!string.IsNullOrEmpty(post.User.ProfilePicture) ? post.User.ProfilePicture : "/images/MissingNo.png")"
                                 class="rounded-circle me-2"
                                 style="width: 32px; height: 32px; object-fit: cover;"
                                 alt="Profile Picture">
                            <div>
                                <h6 class="mb-0 fw-bold">@post.User.UserName</h6>
                                <small class="text-muted">@post.Date.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>

                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(post.Image) ? post.Image : "/images/placeholder-image.jpg")"
                                class="card-img-top"
                                style="height: 300px; object-fit: cover;"
                                alt="No Image">
                    </div>

                    <!-- Post Content -->
                    <div class="card-body">
                        <p class="card-text text-truncate mb-2">@Html.Raw(post.Description)</p>

                        <!-- Post Actions -->
                        <div class="d-flex align-items-center justify-content-between mt-3">
                            <div class="d-flex gap-2">
                                <a asp-controller="Posts" asp-action="Show" asp-route-id="@post.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>

                                @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || post.UserId == ViewBag.CurrentUserId))
                                {
                                    @if (!User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                    }
                                    <a asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                }
                            </div>

                            <!-- Comments Count -->
                            <small class="text-muted">
                                <i class="bi bi-chat-left-text me-1"></i>
                                @(post.Comments?.Count() ?? 0)
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

